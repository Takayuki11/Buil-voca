<div class="area">
  <header class="mb-4 fixed-top">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <% if logged_in? %>
        <% if current_user.teacher == false %>
          <%= link_to "Buil Voca", likes_user_path(current_user), class: "navbar-brand" %>
        <% else %>
          <%= link_to "Buil Voca", user_path(current_user) , class: "navbar-brand" %>
        <% end %>
      <% else %>
        <a class="navbar-brand" href="/">Buil Voca</a>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <% if logged_in? %>
            <li class="nav-item"><%= link_to "Users", users_path, class: "nav-link" %></li>
            <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><%= current_user.name %></a>
            <ul class="dropdown-menu dropdown-menu-right">
              <% if current_user.teacher == false %>
              <li class="dropdown-item"><%= link_to 'プロフィール', likes_user_path(current_user) %></li>
              <% else %>
              <li class="dropdown-item"><%= link_to 'プロフィール', user_path(current_user) %></li>
              <% end %>
              <li class="dropdown-divider"></li>
              <li class="dropdown-item"><%= link_to "ログアウト", logout_path, method: :delete %></li>
              <li class="dropdown-divider"></li>
              <li class="dropdown-item"><%= link_to "退会", @user, data: { confirm: '本当に削除してよろしいですか？' }, method: :delete %></li>
            </ul>
          </li>
          <% else %>
            <li class="nav-item"><%= link_to "Sign up", signup_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Login", login_path, class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>
</div>