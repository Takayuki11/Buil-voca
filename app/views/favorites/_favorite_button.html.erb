<% if current_user.favorite?(other_word) %>
    <%= form_with(model: current_user.favorites.find_by(word_id: other_word.id), local: true, method: :delete, class: "d-inline") do |f| %>
      <%= hidden_field_tag :word_id, other_word.id %>
      <%= f.submit 'unfavorite', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true, class: "d-inline") do |f| %>
      <%= hidden_field_tag :word_id, other_word.id %>
      <%= f.submit 'favorite', class: 'btn btn-primary btn-sm' %>
    <% end %>
<% end %>