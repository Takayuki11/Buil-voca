<div class="container mx-auto mb-3" style="width: 80vw">
  <div class="text-center mb-4">
    <h3>TIOEC単語一覧</h3>
  </div>
  <div class="text-right mb-3">
    <%= link_to "単語のテスト", confirmation_words_path(toeic: "toeic"), class: "btn btn-success" %>
    <% if @eiken_words %>
      <%= link_to "Toeicの単語一覧へ",  toeic_words_path, class: "btn btn-warning" %>
    <% else %>
      <%= link_to "英検の単語一覧へ",  eiken_words_path, class: "btn btn-warning" %>
    <% end %>
  </div>
  
  <div class-"container">
    <div class="row">
      <% @toeic_words.each_with_index do |word, i| %>
        <div class="col-12 col-sm-6 col-md-4 mb-2">
          <div class="card text-center bt-3 shadow" style="padding: 25px;">
            <p><%= link_to word.content, word_path(word, toeic: "toeic") %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= paginate @toeic_words %>
</div>