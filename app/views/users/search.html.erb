<div class="container mx-auto" style="width: 80vw">
    <h1>ユーザー検索</h1>
    <%= form_with url: search_users_path, method: :get, local: true do |f| %>
      <%= f.text_field :name %>
      <%= f.submit "検索", class: "find" %>
    <% end %>
        <% if @users.any? %>
            <div class="row mt-3">
                <% @users.each do |user| %>
                   <div class="col-12 col-sm-6 col-md-4 mb-2">
                        <div class="card text-center pt-3 pb-3 shadow">
                            <% if user.image? %>
                                <%= image_tag user.image.url, :size => '30x30', class: "user-image mx-auto d-block" %>
                            <% else %>
                                <%= image_tag "/assets/default.jpg", :size => '30x30', class: "mx-auto d-block" %>
                            <% end %>
                            <div><%= user.name %></div>
                            <p><%= link_to 'View profile', likes_user_path(user) %></p>
                       </div>
                   </div>
                <% end%>
            <% else %>
            <p class="a mt-3"></p>
            <p class="b mt-3">上記の検索フォームでユーザー名で検索してください。</p>
           </div>
       <% end %>
       <%= paginate @users %>
</div>