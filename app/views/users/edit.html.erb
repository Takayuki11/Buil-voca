<div class="container mx-auto" style="width: 80vw">
  <h1><%= @user.name %> のプロフィール編集ページ</h1>
  
  
  <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    
    <div class="form-group">
      <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
    </div>
    
    <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="form-group d-inline-flex">
      <div>
        <%= f.label :eikenlevel, "英語の試験" %><br>
        <%= f.select :eikenlevel, [["1級", "英語の試験 1級"], ["準1級", "英語の試験 準1級"], ["2級", "英語の試験 2級"], ["準2級", "英語の試験 準2級"], ["3級", "英語の試験 3級"], ["4級", "英語の試験 4級"], ["5級", "英語の試験 5級"], ["未取得", ""]], include_blank: "選択して下さい" %>
      </div>
      <div class="ml-2">
        <%= f.label :toeiclevel, "TIOEC" %><br>
        <%= f.select :toeiclevel, [["900~990", "TIOEC 900~990"], ["800~895", "TIOEC 800~895"], ["700~795", "TIOEC 700~795"], ["600~695", "TIOEC 600~695"], ["500~595", "TIOEC 500~595"], ["~495", "TIOEC ~495"], ["未取得", ""]], include_blank: "選択して下さい", class: "ml-2" %>
      </div>
    </div>
    
    
    <div class="form-group">
        <%= f.label :goal, "Goal" %>
        <%= f.text_area :goal, class: "form-control" %>
    </div>
    
    <%= f.submit "プロフィールを変更", class: "btn btn-primary btn-block mb-4" %>
              
  <% end %>
</div>