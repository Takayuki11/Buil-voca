<% if users.any? %>
  <div class="row">
    <% users.each do |user| %>
      <div class="col-12 col-sm-6 col-md-4 mb-2">
        <div class="card text-center pt-3 pb-3 shadow" style="padding: 25px;">
          <% if user.image? %>
            <%= image_tag user.image.thumb.url, :size => '30x30', class: "user-image mx-auto d-block" %>
          <% else %>
            <%= image_tag "default.jpg", :size => '30x30', class: "mx-auto d-block" %>
          <% end %>
          <div><%= user.name %></div>
          <p><%= link_to 'View profile', likes_user_path(user) %></p>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate users %>
<% end %>