<% if @users.any?%>
    <ul class="list-unstyled">
        <% @users.each do |user| %>
            <li class="media">
                <% if user.image? %>
                    <%= image_tag user.image.url, :size => '30x30', class: "user-image" %>
                <% else %>
                    <%= image_tag "/assets/default.jpg", :size => '30x30' %>
                <% end %>
                <div><%= user.name%></div>
                <div><p><%= link_to 'View profile', user_path(user) %></p></div>
            </li>
        <% end%>
    </ul>
    <% paginate @users%>
<% end %>